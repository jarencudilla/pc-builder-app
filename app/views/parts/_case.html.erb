<section class="table-container">
  <table class="table">
    <Caption>Cases</Caption>

    <thead>  
      <tr>
        <th>Image</th>
        <th>Name</th>
        <th>Form Factor</th>
        <th>Color</th>
        <th>Power Supply</th>
        <th>Side Panel</th>
        <th>Rating</th>
        <th>Mobo Form Factor</th>
        <th>Internal Bays</th>
        <th>Price</th>
      </tr>
    </thead>

    <tbody>
      <% @cases.each do |c| %>
        <tr>
          <td><%= c.image %></td>
          <td><%= c.name %></td>
          <td><%= c.form_factor %></td>
          <td><%= c.color %></td>
          <td><%= c.power_supply %></td>
          <td><%= c.side_panel_window %></td>
          <td><%= c.rating %></td>
          <td><%= c.motherboard_form_factor %></td>
          <td><%= c.internal_bays %></td>
          <td><%= c.price %></td>
        </tr>
      <%end%>
    </tbody>
  </table>
</section>
